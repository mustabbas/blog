
<%= form_for(resource, as: resource_name, url: session_path(resource_name),data: { turbo: false }) do |f| %>
  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "username", class: "form-control m-4 p-3" %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "current-password", placeholder: "password", class: "form-control m-4 p-3"%>
  </div>

  <div class="actions">
    <%= f.submit "Log in", class: "form-control m-4 p-3"%>
  </div>
<% end %>
